<%include partials/header%>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add a new mhshot</h1>
		<div style="width: 30%; margin: 25px auto; ">
			<form action="/mhshots" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="image">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Add</button>
				</div>
			</form>
			<a href="/mhshots">Go back</a>
		</div>
	</div>
</div>

<%include partials/footer%>
<%include partials/header%>

	<div class="container">
		<header class="jumbotron">
			<div class="container">
				<h1>Welcome to MyMHGallery</h1>
				<p>View pretty monster hunter pictures</p>
				<p>
					<a class="btn btn-primary btn-large" href="/mhshots/new">Add a new mhshot</a>
				</p>
			</div>
		</header>

		<div class="row text-center" style="display: flex; flex-wrap: wrap;">
			<%mhshots.forEach(function(e){%>
				<div class="col-md-4 col-sm-6">
					<div class="thumbnail">
						<img src="<%=e.image%>">
						<div class="caption">
							<h4><%=e.name%></h4>	
						</div>
						<a href="/mhshots/<%=e._id%>" class="btn btn-primary">more info</a>
					</div>
				</div>
			<%})%>
		</div>
	</div>

<%include partials/footer%>